{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./wwwroot/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "swiper_angular": ["../node_modules/swiper/angular"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
